<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="dmoritz_comix_ninja_api_homepage" path="/hello/{name}">
        <default key="_controller">DmoritzComixNinjaApiBundle:Default:index</default>
    </route>

    <route id="dmoritz_comix_ninja_api_api" path="/api/{name}">
        <default key="_controller">DmoritzComixNinjaApiBundle:Api:handleRequest</default>
    </route>

    <route id="dmoritz_comix_ninja_api_api" path="/api/publisher">
        <default key="_controller">DmoritzComixNinjaApiBundle:Api:publishers</default>
    </route>
</routes>
