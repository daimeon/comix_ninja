{% block body %}
    <div class="row">
        <div class="col-md-12">
            <span class="label label-default">Publisher (DC Comics)</span>
            <span class="label label-primary">Year (2008)</span>
            <span class="label label-success">Author (Garth Enis)</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
                <div class="btn-group" role="group" aria-label="...">
                    <a class="btn btn-success" href="{{ path('addPublisher') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> add</a>
                    <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> delete</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {% for oPublisher in aPublishers %}
            <div class="col-md-4">
                <div class="thumbnail">
                    <div>
                        <img src="/assets/img/logos/{{ oPublisher.logo }}" alt="{{ oPublisher.name }}" width="150" style="align-self: center">
                    </div>
                    <div class="caption">
                        <h4>{{ oPublisher.name }}</h4>
                        <p>
                            <a href="publisherDetails/{{ oPublisher.id }}" class="btn btn-primary" role="button">Details</a>
                        </p>
                    </div>
                </div>
            </div>
            {% if loop.index is divisibleby(3) %}
                </div>
                <div class="clearfix visible-xs-block"></div>
                <div class="row">

            {% endif %}
        {% endfor %}
    </div>
